{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"es5",
			"scripthost",
			"es2020.bigint"
		]
	},
	"exclude": [
		"node_modules"
	]
}